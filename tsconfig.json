{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./dist/typings",
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ]
    },
    "exclude": [
        "demo",
        "dist",
        "node_modules"
    ]
}